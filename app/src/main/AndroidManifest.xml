<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmasterapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMasterApp">
        <activity android:name=".VerificationActivity"/>
        <activity android:name=".SignInActivity" />
        <activity android:name=".Settings"/>
        <activity android:name=".TaskDetail"/>
        <activity android:name=".AllTasksActivity" />
        <activity android:name=".AddTaskActivity" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".SignUpActivity"
            android:label="@string/title_activity_task_main"
            android:theme="@style/Theme.TaskMasterApp.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>